<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animation.PropertyAnimationActivity">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="TextView"
        android:gravity="center"
        android:background="#f05b72"/>

    <Button
        android:id="@+id/btn_valueAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        android:layout_marginTop="20dp"
        android:text="ValueAnimator"
        android:onClick="valueAnimator"/>

    <Button
        android:id="@+id/btn_objAnimator_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_valueAnimator"
        android:text="ObjectAnimator(Alpha)"
        android:onClick="objectAnimator_alpha"/>

    <Button
        android:id="@+id/btn_objAnimator_rotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_objAnimator_alpha"
        android:text="ObjectAnimator(rotation)"
        android:onClick="objectAnimator_rotation"/>

    <Button
        android:id="@+id/btn_objAnimator_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_objAnimator_rotation"
        android:text="ObjectAnimator(scale)"
        android:onClick="objectAnimator_scale"/>

    <Button
        android:id="@+id/btn_objAnimator_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_objAnimator_scale"
        android:text="ObjectAnimator(translate)"
        android:onClick="objectAnimator_translateX"/>

    <Button
        android:id="@+id/btn_objAnimator_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_objAnimator_translate"
        android:text="ObjectAnimator(Set)"
        android:onClick="objectAnimator_set"/>

</androidx.constraintlayout.widget.ConstraintLayout>