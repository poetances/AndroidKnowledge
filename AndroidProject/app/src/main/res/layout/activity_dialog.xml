<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".systermUI.DialogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通的AlertDialog"
            android:onClick="showNormalDialog"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单选AlertDialog"
            android:onClick="showSingleChoiceDialog"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多选AlertDialog"
            android:onClick="showMChoiceDialog"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义AlertDialog"
            android:onClick="showCustomViewDialog"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ProgressDialog（已弃用）"
            android:onClick="showProgressDialog"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DatePickerDialog"
            android:onClick="showDatePickerDialog"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TimePickerDialog"
            android:onClick="showTimePickerDialog"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>